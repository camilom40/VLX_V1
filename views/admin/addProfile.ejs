            <!-- Reference Code -->
            <div class="form-section">
              <div class="flex items-center gap-2.5 mb-3">
                <div class="section-icon bg-purple-100 text-purple-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                  </svg>
                </div>
                <div>
                  <label for="colorCode" class="font-semibold text-gray-800 text-sm">Reference Code</label>
                  <span class="required-badge">Required</span>
                </div>
              </div>
              <div class="input-with-icon">
                <div class="input-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                  </svg>
                </div>
                <input type="text" id="colorCode" name="colorCode" required class="form-input" 
                    placeholder="e.g., PRF-001">
              </div>
              <p class="help-text">Unique reference code</p>
            </div>

            <!-- AMMA Certification -->
            <div class="form-section">
              <div class="flex items-center gap-2.5 mb-3">
                <div class="section-icon bg-fuchsia-100 text-fuchsia-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <label for="ammaCertification" class="font-semibold text-gray-800 text-sm">AMMA Certification</label>
                  <span class="required-badge">Required</span>
                </div>
              </div>
              <div class="input-with-icon">
                <div class="input-icon">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <select id="ammaCertification" name="ammaCertification" required class="form-input">
                  <option value="">Select...</option>
                  <option value="none">No Certification</option>
                  <option value="2603">2603</option>
                  <option value="2604">2604</option>
                  <option value="2605">2605</option>
                </select>
              </div>
              <p class="help-text">AMMA certification number</p>
            </div>
          </div>

          <!-- Row 3: Price and Weight -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <!-- Price -->
            <div class="form-section">
              <div class="flex items-center gap-2.5 mb-3">
                <div class="section-icon bg-emerald-100 text-emerald-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
                <div>
                  <label for="pricePerMeter" class="font-semibold text-gray-800 text-sm" id="pricePerMeterLabel">Price Per <span id="priceUnitDisplay">Inch</span></label>
                  <span class="required-badge">Required</span>
                </div>
              </div>
              <div class="flex gap-2">
                <div class="flex-1 input-with-icon">
                  <div class="input-icon">
                    <span class="text-base font-bold">$</span>
                  </div>
                  <input type="number" id="pricePerMeter" name="pricePerMeter" 
                      step="0.01" min="0" required class="form-input" placeholder="0.00">
                  <input type="hidden" id="currency" name="currency" value="USD">
                </div>
                <div class="flex items-center px-3 bg-gray-50 rounded border border-gray-200">
                  <span class="text-sm text-gray-600" id="priceUnitSuffix">/in</span>
                </div>
              </div>
              <p class="help-text">Price per unit (stored in USD, converted to per meter for calculations)</p>
            </div>

            <!-- Weight -->
