  <script>
    // Weight unit conversion
    // For profiles: kg/m to lbs/ft (1 kg/m = 0.671969 lbs/ft)
    const KG_PER_M_TO_LBS_PER_FT = 0.671969;
    const LBS_PER_FT_TO_KG_PER_M = 1.48816; // inverse
    let weightUnit = 'kg'; // 'kg' or 'lbs'
    
    document.addEventListener('DOMContentLoaded', function() {
      // Name validation on input
      const nameInput = document.getElementById('name');
      const nameError = document.getElementById('nameError');
      
      nameInput.addEventListener('input', function() {
        if (/\s/.test(this.value)) {
          nameError.style.display = 'block';
          this.style.borderColor = '#f87171';
        } else {
          nameError.style.display = 'none';
          this.style.borderColor = '';
        }
      });
      
      // Weight unit toggle
      const weightInput = document.getElementById('weight');
      const weightUnitLabel = document.getElementById('weightUnitLabel');
      const weightUnitSuffix = document.getElementById('weightUnit');
      const weightUnitToggle = document.getElementById('weightUnitToggle');
      const weightUnitToggleLbs = document.getElementById('weightUnitToggleLbs');
      
      function updateWeightUnitDisplay() {
        if (weightUnit === 'kg') {
          weightUnitSuffix.textContent = 'kg/m';
          weightUnitToggle.classList.remove('text-gray-400');
          weightUnitToggle.classList.add('text-gray-600');
          weightUnitToggleLbs.classList.remove('text-gray-600');
          weightUnitToggleLbs.classList.add('text-gray-400');
        } else {
          weightUnitSuffix.textContent = 'lbs/ft';
          weightUnitToggle.classList.remove('text-gray-600');
          weightUnitToggle.classList.add('text-gray-400');
          weightUnitToggleLbs.classList.remove('text-gray-400');
          weightUnitToggleLbs.classList.add('text-gray-600');
        }
      }
      
      weightUnitToggle.addEventListener('click', function() {
        if (weightUnit === 'lbs') {
          // Convert from lbs/ft to kg/m
          const currentValue = parseFloat(weightInput.value);
          if (!isNaN(currentValue) && currentValue > 0) {
            weightInput.value = (currentValue * LBS_PER_FT_TO_KG_PER_M).toFixed(2);
          }
          weightUnit = 'kg';
          updateWeightUnitDisplay();
        }
      });
      
      weightUnitToggleLbs.addEventListener('click', function() {
        if (weightUnit === 'kg') {
          // Convert from kg/m to lbs/ft
          const currentValue = parseFloat(weightInput.value);
          if (!isNaN(currentValue) && currentValue > 0) {
            weightInput.value = (currentValue * KG_PER_M_TO_LBS_PER_FT).toFixed(2);
          }
          weightUnit = 'lbs';
          updateWeightUnitDisplay();
        }
      });
      
      updateWeightUnitDisplay();
    });
    
    function validateAndSubmit() {
      const name = document.getElementById('name').value.trim();
      const pricePerMeter = document.getElementById('pricePerMeter');
      const nameError = document.getElementById('nameError');
      const weightInput = document.getElementById('weight');
      
      // Name validation
      if (/\s/.test(name)) {
        nameError.style.display = 'block';
        document.getElementById('name').focus();
        return;
      } else {
        nameError.style.display = 'none';
      }
      
      // Convert weight to kg/m before submission if in lbs/ft
      if (weightInput && weightUnit === 'lbs') {
        const lbsPerFtValue = parseFloat(weightInput.value);
        if (!isNaN(lbsPerFtValue) && lbsPerFtValue > 0) {
          weightInput.value = (lbsPerFtValue * LBS_PER_FT_TO_KG_PER_M).toFixed(2);
        }
      }
      
      // Convert price from current unit to per meter before submission
      if (pricePerMeter) {
        const priceValue = parseFloat(pricePerMeter.value);
        if (!isNaN(priceValue) && priceValue > 0) {
          const globalUnit = window.globalPreferences?.unit || localStorage.getItem('globalUnit') || 'inches';
          let pricePerMeterValue;
          
          if (globalUnit === 'mm') {
            // Convert from per mm to per meter: 1 meter = 1000 mm
            pricePerMeterValue = priceValue * 1000;
          } else {
            // Convert from per inch to per meter: 1 meter = 39.3701 inches
            pricePerMeterValue = priceValue * 39.3701;
          }
          
          pricePerMeter.value = pricePerMeterValue.toFixed(4);
        }
      }
      
      // Submit the form
      document.getElementById('createProfileForm').submit();
    }
  </script>
