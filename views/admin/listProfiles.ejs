                                <th>Color</th>
                                <th>Reference</th>
                                <th>AMMA</th>
                                <th>Price</th>
                                <th>Weight</th>
                                <th>Muntin</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% profiles.forEach(function(profile, index) { %>
                                <tr class="profile-row animate-row" style="animation-delay: <%= index * 30 %>ms"
                                    data-id="<%= profile._id %>"
                                    data-search="<%= profile.name.toLowerCase() %> <%= profile.color.toLowerCase() %> <%= profile.colorCode.toLowerCase() %>">
                                    <td>
                                        <input type="checkbox" class="row-checkbox w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" data-id="<%= profile._id %>">
                                    </td>
                                    <td>
                                        <span class="font-medium text-gray-900"><%= profile.name %></span>
                                    </td>
                                    <td>
                                        <span class="font-medium text-gray-900"><%= profile.color %></span>
                                    </td>
                                    <td>
                                        <span class="badge badge-indigo"><%= profile.colorCode %></span>
                                    </td>
                                    <td>
                                        <% if (profile.ammaCertification && profile.ammaCertification !== 'No Certification') { %>
                                            <span class="badge badge-fuchsia"><%= profile.ammaCertification %></span>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">—</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="price-display font-semibold text-green-600" 
                                              data-price="<%= profile.pricePerMeter %>" 
                                              data-currency="<%= profile.currency || 'COP' %>">
                                        </span>
                                    </td>
                                    <td>
                                        <% if (profile.weight != null && profile.weight !== undefined) { %>
                                            <span class="badge badge-amber weight-display" data-weight="<%= profile.weight %>">
                                                <%= profile.weight.toFixed(2) %> kg/m
                                            </span>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">—</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if (profile.isMuntin) { %>
                                            <span class="badge badge-green">Yes</span>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">—</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="flex items-center justify-center gap-1">
                                            <a href="/admin/profiles/edit/<%= profile._id %>" class="action-btn edit" title="Edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 0L11.828 15H9v-2.828l8.586-8.586z" />
                                                </svg>
                                            </a>
