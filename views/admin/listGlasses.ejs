                                </th>
                                <th>Type</th>
                                <th>Description</th>
                                <th>Color</th>
                                <th>Price</th>
                                <th>Weight</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% glasses.forEach(function(glass, index) { %>
                                <tr class="glass-row animate-row" data-animation-delay="<%= index * 30 %>"
                                    data-id="<%= glass._id %>"
                                    data-search="<%= glass.glass_type.toLowerCase() %> <%= glass.description.toLowerCase() %> <%= (glass.color || '').toLowerCase() %>">
                                    <td>
                                        <input type="checkbox" class="row-checkbox w-4 h-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" data-id="<%= glass._id %>">
                                    </td>
                                    <td>
                                        <span class="badge badge-indigo"><%= glass.glass_type %></span>
                                    </td>
                                    <td>
                                        <span class="font-medium text-gray-900 max-w-xs truncate block"><%= glass.description %></span>
                                    </td>
                                    <td>
