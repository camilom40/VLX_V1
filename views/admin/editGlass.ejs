                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </div>
                                <div>
                                    <label for="glass_type" class="font-semibold text-gray-800 text-sm">Glass Type</label>
                                    <span class="required-badge">Required</span>
                                </div>
                            </div>
                            <div class="input-with-icon">
                                <div class="input-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                    </svg>
                                </div>
                                <input type="text" id="glass_type" name="glass_type" value="<%= glass.glass_type %>" required class="form-input" 
                                    placeholder="e.g., TemperedGlass" maxlength="50">
                            </div>
                            <p class="help-text">Enter a unique identifier for this glass type</p>
                        </div>
                    </div>

                    <!-- Description Section (Full Width) -->
                    <div class="form-section mb-4">
                        <div class="flex items-center gap-2.5 mb-3">
                            <div class="section-icon bg-blue-100 text-blue-600">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                                </svg>
                            </div>
                            <div>
                                <label for="description" class="font-semibold text-gray-800 text-sm">Description</label>
                                <span class="required-badge">Required</span>
                            </div>
                        </div>
                        <textarea id="description" name="description" required class="form-input" 
                            placeholder="Enter detailed description of the glass"><%= glass.description %></textarea>
                        <p class="help-text">Provide a detailed description of the glass</p>
                    </div>

                    <!-- Row 2.5: Color and Low E -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <!-- Glass Color -->
                        <div class="form-section">
                            <div class="flex items-center gap-2.5 mb-3">
                                <div class="section-icon bg-pink-100 text-pink-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                                    </svg>
                                </div>
                                <div>
                                    <label for="color" class="font-semibold text-gray-800 text-sm">Glass Color</label>
                                </div>
                            </div>
                            <div class="input-with-icon">
                                <div class="input-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                                    </svg>
                                </div>
                                <input type="text" id="color" name="color" value="<%= glass.color || '' %>" class="form-input" 
                                    placeholder="e.g., Clear, Bronze, Blue, Green">
                            </div>
                            <p class="help-text">Optional: Glass tint or color</p>
                        </div>

                        <!-- Low E Checkbox -->
                        <div class="form-section">
                            <div class="flex items-center gap-2.5 mb-3">
                                <div class="section-icon bg-green-100 text-green-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <label for="isLowE" class="font-semibold text-gray-800 text-sm">Low E Glass</label>
                                </div>
                            </div>
                            <div class="flex items-center gap-3">
                                <label class="flex items-center cursor-pointer">
                                    <input type="checkbox" id="isLowE" name="isLowE" <%= glass.isLowE ? 'checked' : '' %> class="w-5 h-5 text-blue-600 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                                    <span class="ml-2 text-sm text-gray-700">This glass type is Low E (Low Emissivity)</span>
                                </label>
                            </div>
                            <p class="help-text">Check if this glass has Low E coating for energy efficiency</p>
                        </div>
                    </div>

                    <!-- Row 2: Price and Weight -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
                        <!-- Price field -->
                        <div class="form-section">
                            <div class="flex items-center gap-2.5 mb-3">
                                <div class="section-icon bg-emerald-100 text-emerald-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                                    </svg>
                                </div>
                                <div>
                                    <label for="pricePerSquareMeter" class="font-semibold text-gray-800 text-sm">Price Per Square Meter</label>
                                    <span class="required-badge">Required</span>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <div class="flex-1 input-with-icon">
                                    <div class="input-icon">
                                        <span class="text-base font-bold">$</span>
                                    </div>
                                    <input type="number" id="pricePerSquareMeter" name="pricePerSquareMeter" step="0.01" min="0" value="<%= glass.pricePerSquareMeter %>" required 
                                        class="form-input" placeholder="0.00">
                                </div>
                                <select id="currency" name="currency" required class="form-input-simple !w-24">
                                    <option value="COP" <%= (glass.currency || 'COP') === 'COP' ? 'selected' : '' %>>COP</option>
                                    <option value="USD" <%= (glass.currency || 'COP') === 'USD' ? 'selected' : '' %>>USD</option>
                                </select>
                            </div>
                            <p id="priceError" class="error-text">Must be positive</p>
                        </div>

                        <!-- Weight field -->
                        <div class="form-section">
                            <div class="flex items-center gap-2.5 mb-3">
                                <div class="section-icon bg-amber-100 text-amber-600">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                    </svg>
                                </div>
                                <div>
                                    <label for="weight" class="font-semibold text-gray-800 text-sm">Weight</label>
                                    <span class="required-badge">Required</span>
                                </div>
                            </div>
                            <div class="flex gap-2">
                                <div class="flex-1 input-with-icon">
                                    <div class="input-icon">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                                        </svg>
                                    </div>
                                    <input type="number" id="weight" name="weight" step="0.01" min="0" value="<%= glass.weight %>" required 
                                        class="form-input !pr-20" placeholder="0.00">
                                    <div class="input-suffix" id="weightUnit">kg/m²</div>
                                </div>
                                <div class="flex items-center gap-2 bg-gray-50 rounded-lg px-3 border border-gray-200">
                                    <button type="button" id="weightUnitToggle" class="text-xs font-semibold text-gray-600 hover:text-gray-800 transition-colors">
                                        <span id="weightUnitLabel">kg</span>
                                    </button>
                                    <div class="w-px h-4 bg-gray-300"></div>
                                    <button type="button" id="weightUnitToggleLbs" class="text-xs font-semibold text-gray-400 hover:text-gray-600 transition-colors">
                                        <span>lbs</span>
                                    </button>
                                </div>
                            </div>
                            <p id="weightError" class="error-text">Must be positive</p>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex justify-between items-center pt-5 mt-5 border-t border-gray-100">
                        <!-- Delete button -->
                        <form action="/admin/glasses/delete/<%= glass._id %>" method="post" class="inline" id="deleteForm">
                            <button type="button" id="deleteButton" class="btn-danger">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                </svg>
                                Delete
                            </button>
                        </form>
                        
                        <div class="flex gap-3">
                            <a href="/admin/glasses" class="btn-secondary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                </svg>
                                Cancel
