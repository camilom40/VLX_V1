<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/_head.ejs') %>
  <title>Add New Glass</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom input styles */
    .input-field {
      width: 100%;
      padding: 0.75rem 1rem;
      background-color: #eff6ff;
      border: 1px solid #d1d5db;
      border-radius: 0.375rem;
      box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
      transition: all 0.15s ease-in-out;
      min-height: 42px;
    }
    
    .input-field:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 2px rgba(59, 130, 246, 0.5);
    }
    
    .label-text {
      display: block;
      font-size: 0.875rem;
      font-weight: 500;
      margin-bottom: 0.25rem;
      transition: all 0.15s ease-in-out;
    }
    
    .section-title {
      font-weight: 700;
      font-size: 1.125rem;
      background-clip: text;
      -webkit-background-clip: text;
      color: transparent;
    }
    
    /* Section title styles */
    .section-type {
      background-image: linear-gradient(to right, #4f46e5, #3b82f6);
    }
    .section-desc {
      background-image: linear-gradient(to right, #2563eb, #0ea5e9);
    }
    .section-missile {
      background-image: linear-gradient(to right, #9333ea, #d946ef);
    }
    .section-price {
      background-image: linear-gradient(to right, #059669, #22c55e);
    }
    .section-weight {
      background-image: linear-gradient(to right, #d97706, #eab308);
    }
    
    /* Required field indicator */
    .required::after {
      content: "*";
      color: #ef4444;
      margin-left: 4px;
      font-size: 1.2em;
    }
    
    .input-group-text {
      display: inline-flex;
      align-items: center;
      padding: 0.75rem 1rem;
      background-color: #f3f4f6;
      color: #4b5563;
      font-weight: 500;
      border: 1px solid #d1d5db;
      border-left: none;
      border-top-right-radius: 0.375rem;
      border-bottom-right-radius: 0.375rem;
      border-top-left-radius: 0;
      border-bottom-left-radius: 0;
      transition: all 0.15s ease-in-out;
    }
    
    .input-field:focus + .input-group-text {
      border-color: #3b82f6;
      background-color: #e5e7eb;
      color: #1f2937;
    }
    
    .input-field.rounded-r-none {
      border-top-right-radius: 0;
      border-bottom-right-radius: 0;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/_header.ejs') %>
  
  <main class="container mx-auto px-4 py-8 flex-grow">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="bg-white shadow-md rounded-xl p-4 mb-6">
        <h1 class="text-3xl font-bold text-gray-800 bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">
          Add New Glass
        </h1>
      </div>
      
      <!-- Form Card -->
      <div class="bg-white shadow-md rounded-xl overflow-hidden">
        <div class="p-6">
          <form action="/admin/glasses/add" method="POST">
            <!-- Glass Type Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <label for="glass_type" class="label-text section-title section-type required">Glass Type</label>
              </div>
              <input type="text" id="glass_type" name="glass_type" required 
                    class="input-field" 
                    placeholder="Enter glass type">
              <p class="mt-1 text-sm text-gray-500">Enter a unique identifier for this glass type</p>
            </div>
            
            <!-- Description Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
                </svg>
                <label for="description" class="label-text section-title section-desc required">Description</label>
              </div>
              <textarea id="description" name="description" required 
                       class="input-field" 
                       placeholder="Enter detailed description"
                       rows="3"></textarea>
              <p class="mt-1 text-sm text-gray-500">Provide a detailed description of the glass</p>
            </div>
            
            <!-- Missile Type Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                </svg>
                <label for="missile_type" class="label-text section-title section-missile required">Missile Type</label>
              </div>
              <select id="missile_type" name="missile_type" required class="input-field">
                <option value="">Select a missile type</option>
                <option value="LMI">LMI (Large Missile Impact)</option>
                <option value="SMI">SMI (Small Missile Impact)</option>
              </select>
              <p class="mt-1 text-sm text-gray-500">Specify the missile impact rating of the glass</p>
            </div>
            
            <!-- Price Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <label for="pricePerSquareMeter" class="label-text section-title section-price required">Price Per Square Meter</label>
              </div>
              <div class="flex items-center">
                <input type="text" 
                      id="pricePerSquareMeter" 
                      name="pricePerSquareMeter" 
                      required 
                      class="input-field rounded-r-none" 
                      placeholder="Enter price per square meter"
                      inputmode="numeric"
                      pattern="[0-9]+"
                      title="Please enter a whole number without decimals">
                <span class="input-group-text">
                  COP
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Enter the price per square meter in Colombian Pesos (whole number)</p>
            </div>
            
            <!-- Weight Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
                <label for="weight" class="label-text section-title section-weight required">Weight</label>
              </div>
              <div class="flex items-center">
                <input type="number" 
                      id="weight" 
                      name="weight" 
                      step="0.01" 
                      required 
                      class="input-field rounded-r-none" 
                      placeholder="Enter weight">
                <span class="input-group-text">
                  kg/mÂ²
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Weight in kilograms per square meter</p>
            </div>
            
            <!-- Divider -->
            <div class="border-t border-gray-200 my-8"></div>
            
            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row sm:justify-between gap-4">
              <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-150 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                </svg>
                Add Glass
              </button>
              <a href="/admin/glasses" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg shadow-md transition duration-150 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>
  
  <%- include('../partials/_footer.ejs') %>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Format price input as Colombian currency (whole numbers only)
      const priceInput = document.getElementById('pricePerSquareMeter');
      if (priceInput) {
        priceInput.addEventListener('input', function(e) {
          // Remove non-numeric characters
          let value = this.value.replace(/\D/g, '');
          
          // Format with thousand separators if value exists
          if (value) {
            this.value = parseInt(value, 10).toLocaleString('es-CO');
          }
        });
        
        // Before form submission, convert formatted number back to plain number
        priceInput.form.addEventListener('submit', function() {
          priceInput.value = priceInput.value.replace(/\D/g, '');
        });
      }
    });
  </script>
</body>
</html>
