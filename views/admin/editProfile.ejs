<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/_head.ejs') %>
  <title>Edit Profile</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    /* Custom input styles */
    .input-field {
      @apply mt-1 block w-full px-4 py-3 bg-blue-50 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 transition duration-150;
      min-height: 42px;
    }
    
    .label-text {
      @apply block text-sm font-medium mb-1 transition duration-150;
    }
    
    .section-title {
      @apply font-bold text-lg bg-gradient-to-r bg-clip-text text-transparent;
    }
    
    /* Section title styles */
    .section-name { @apply from-indigo-600 to-blue-500; }
    .section-color { @apply from-blue-600 to-sky-500; }
    .section-reference { @apply from-purple-600 to-fuchsia-500; }
    .section-amma { @apply from-fuchsia-600 to-pink-500; }
    .section-price { @apply from-emerald-600 to-green-500; }
    .section-weight { @apply from-amber-600 to-yellow-500; }
    
    /* Required field indicator */
    .required::after {
      content: "*";
      color: #ef4444;
      margin-left: 4px;
      font-size: 1.2em;
    }
    
    /* Detail styles */
    .detail-label {
      @apply text-sm font-medium;
    }
    
    .detail-value {
      @apply text-sm text-gray-700;
    }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
  <%- include('../partials/_header.ejs') %>
  <main class="container mx-auto px-4 py-8 flex-grow">
    <div class="max-w-3xl mx-auto">
      <!-- Header -->
      <div class="bg-white shadow-md rounded-xl p-4 mb-6">
        <h1 class="text-3xl font-bold text-gray-800 bg-gradient-to-r from-indigo-600 to-blue-600 bg-clip-text text-transparent">
          Edit Profile
        </h1>
      </div>
      
      <!-- Form Card -->
      <div class="bg-white shadow-md rounded-xl overflow-hidden">
        <div class="p-6">
          <form action="/admin/profiles/update/<%= profile._id %>" method="POST">
            <!-- Profile Name Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-indigo-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
                <label for="name" class="label-text section-title section-name required">Profile Name</label>
              </div>
              <input type="text" id="name" name="name" value="<%= profile.name %>" required 
                    class="input-field" 
                    placeholder="Enter profile name">
              <p class="mt-1 text-sm text-gray-500">Enter a unique identifier for this profile</p>
            </div>
            
            <!-- Color Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-blue-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V19a2 2 0 01-2 2H7z" />
                </svg>
                <label for="color" class="label-text section-title section-color required">Color</label>
              </div>
              <input type="text" id="color" name="color" value="<%= profile.color %>" required 
                    class="input-field" 
                    placeholder="Enter color description">
              <p class="mt-1 text-sm text-gray-500">Descriptive name of the profile color</p>
            </div>
            
            <!-- Color Code Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-purple-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V19a2 2 0 01-2 2H7z" />
                </svg>
                <label for="colorCode" class="label-text section-title section-reference required">Reference</label>
              </div>
              <div class="flex gap-3">
                <input type="text" 
                      id="colorCode" 
                      name="colorCode" 
                      value="<%= profile.colorCode %>" 
                      required 
                      class="input-field" 
                      placeholder="Enter reference code">
                <div class="h-10 w-10 rounded-md border border-gray-300" id="colorPreview" style='background-color: <%= profile.colorCode %>'></div>
              </div>
              <p class="mt-1 text-sm text-gray-500">Profile reference code</p>
            </div>
            
            <!-- AMMA Certification Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-fuchsia-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <label for="ammaCertification" class="label-text section-title section-amma required">AMMA Certification</label>
              </div>
              <select id="ammaCertification" 
                    name="ammaCertification" 
                    required 
                    class="input-field">
                <option value="2603" <%= profile.ammaCertification === '2603' ? 'selected' : '' %>>2603</option>
                <option value="2604" <%= profile.ammaCertification === '2604' ? 'selected' : '' %>>2604</option>
                <option value="2605" <%= profile.ammaCertification === '2605' ? 'selected' : '' %>>2605</option>
              </select>
              <p class="mt-1 text-sm text-gray-500">AMMA certification number</p>
            </div>
            
            <!-- Price Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-emerald-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <label for="pricePerMeter" class="label-text section-title section-price required">Price Per Meter</label>
              </div>
              <div class="flex items-center">
                <input type="text" 
                      id="pricePerMeter" 
                      name="pricePerMeter" 
                      value="<%= profile.pricePerMeter.toLocaleString('es-CO') %>" 
                      required 
                      class="mt-1 block w-full px-4 py-3 bg-blue-50 border border-gray-300 rounded-l-md shadow-sm focus:ring-blue-500 focus:border-blue-500 transition duration-150" 
                      placeholder="Enter price per meter"
                      inputmode="numeric"
                      pattern="[0-9,.]+"
                      title="Please enter a valid number">
                <span class="inline-flex items-center px-3 bg-gray-200 text-gray-700 border border-gray-300 rounded-r-md">
                  COP
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Price per meter in Colombian Pesos</p>
            </div>
            
            <!-- Weight Section -->
            <div class="mb-6">
              <div class="flex items-center mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-amber-500 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                </svg>
                <label for="weight" class="label-text section-title section-weight required">Weight</label>
              </div>
              <div class="flex items-center">
                <input type="number" 
                      id="weight" 
                      name="weight" 
                      value="<%= profile.weight %>" 
                      step="0.01" 
                      required 
                      class="mt-1 block w-full px-4 py-3 bg-blue-50 border border-gray-300 rounded-l-md shadow-sm focus:ring-blue-500 focus:border-blue-500 transition duration-150" 
                      placeholder="Enter weight">
                <span class="inline-flex items-center px-3 bg-gray-200 text-gray-700 border border-gray-300 rounded-r-md">
                  kg/m
                </span>
              </div>
              <p class="mt-1 text-sm text-gray-500">Weight in kilograms per meter</p>
            </div>
            
            <!-- Divider -->
            <div class="border-t border-gray-200 my-8"></div>
            
            <!-- Form Actions -->
            <div class="flex flex-col sm:flex-row sm:justify-between gap-4">
              <button type="submit" class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 px-6 rounded-lg shadow-md transition duration-150 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
                </svg>
                Update Profile
              </button>
              <a href="/admin/profiles" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-bold py-3 px-6 rounded-lg shadow-md transition duration-150 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
                Cancel
              </a>
            </div>
          </form>
        </div>
        
        <!-- Profile Details Box -->
        <div class="bg-gray-50 p-6 border-t border-gray-200">
          <h3 class="text-lg font-medium text-gray-900 mb-4">Profile Information</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex flex-col">
              <span class="detail-label text-indigo-600">Name</span>
              <span class="detail-value"><%= profile.name %></span>
            </div>
            
            <div class="flex flex-col">
              <span class="detail-label text-purple-600">Reference</span>
              <div class="flex items-center">
                <div class="h-4 w-4 rounded-full mr-2" style='background-color: <%= profile.colorCode %>'></div>
                <span class="detail-value"><%= profile.colorCode %></span>
              </div>
            </div>
            
            <div class="flex flex-col">
              <span class="detail-label text-fuchsia-600">AMMA Certification</span>
              <span class="detail-value"><%= profile.ammaCertification %></span>
            </div>
            
            <div class="flex flex-col">
              <span class="detail-label text-emerald-600">Price</span>
              <span class="detail-value"><%= profile.pricePerMeter.toLocaleString('es-CO', { style: 'currency', currency: 'COP', maximumFractionDigits: 0 }) %> per meter</span>
            </div>
            
            <div class="flex flex-col">
              <span class="detail-label text-amber-600">Weight</span>
              <span class="detail-value"><%= profile.weight.toLocaleString('es-CO', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %> kg/m</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
  
  <%- include('../partials/_footer.ejs') %>
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Handle color code input and preview
      const colorCodeInput = document.getElementById('colorCode');
      const colorPreview = document.getElementById('colorPreview');
      
      if (colorCodeInput && colorPreview) {
        colorCodeInput.addEventListener('input', function() {
          colorPreview.style.backgroundColor = this.value;
        });
      }
      
      // Format price input as Colombian currency
      const priceInput = document.getElementById('pricePerMeter');
      if (priceInput) {
        priceInput.addEventListener('input', function(e) {
          // Remove non-numeric characters
          let value = this.value.replace(/\D/g, '');
          
          // Format with thousand separators if value exists
          if (value) {
            this.value = parseInt(value, 10).toLocaleString('es-CO');
          }
        });
        
        // Before form submission, convert formatted number back to plain number
        priceInput.form.addEventListener('submit', function() {
          priceInput.value = priceInput.value.replace(/\D/g, '');
        });
      }
    });
  </script>
</body>
</html>
