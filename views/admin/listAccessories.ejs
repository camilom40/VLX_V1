<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/_head.ejs'); %>
    <title>Accessory List</title>
    <!-- Include Tailwind CSS for styling -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        async function handleImportFormSubmit(event) {
            event.preventDefault();
            const formData = new FormData(event.target);
            try {
                const response = await fetch('/admin/accessories/import-accessories', {
                    method: 'POST',
                    body: formData
                });
                const result = await response.json();
                alert(result.message);
                if (response.ok) {
                    location.reload();
                }
            } catch (error) {
                console.error('Failed to import data:', error);
                alert('Failed to import data');
                location.reload();
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            const searchInput = document.getElementById('searchInput');
            searchInput.addEventListener('keyup', function() {
                const filter = searchInput.value.toLowerCase();
                const rows = document.querySelectorAll('#accessoryTableBody tr');
                rows.forEach(row => {
                    const cells = row.getElementsByTagName('td');
                    let match = false;
                    for (let i = 0; i < cells.length; i++) {
                        if (cells[i].innerText.toLowerCase().includes(filter)) {
                            match = true;
                            break;
                        }
                    }
                    row.style.display = match ? '' : 'none';
                });
            });
        });
    </script>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">
    <%- include('../partials/_header.ejs') %>
    <main class="flex-grow container mx-auto mt-10 px-4">
        <div class="flex justify-between items-center mb-6">
            <h1 class="text-4xl font-bold text-gray-800">Accessories</h1>
            <input type="text" id="searchInput" placeholder="Search accessories..." class="border border-gray-300 rounded py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500">
        </div>
        <div class="flex justify-between items-center mb-6">
            <div class="flex space-x-4">
                <a href="/admin/accessories/add" class="bg-blue-600 hover:bg-blue-800 text-white font-bold py-2 px-4 rounded">Add New Accessory</a>
                <a href="/admin/accessories/export-accessories" class="bg-green-600 hover:bg-green-800 text-white font-bold py-2 px-4 rounded">Export to Excel</a>
            </div>
            <form id="import-form" onsubmit="handleImportFormSubmit(event)" method="POST" enctype="multipart/form-data" class="flex space-x-2 items-center">
                <input type="file" name="file" accept=".xlsx" class="bg-white text-gray-800 border border-gray-300 rounded py-2 px-4 focus:outline-none focus:ring-2 focus:ring-blue-500" required>
                <button type="submit" class="bg-green-600 hover:bg-green-800 text-white font-bold py-2 px-4 rounded">Import from Excel</button>
            </form>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-lg">
            <% if (accessories.length > 0) { %>
                <div class="overflow-x-auto">
                    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
                        <thead class="bg-gray-200 text-gray-800 uppercase text-sm leading-normal">
                            <tr>
                                <th class="py-3 px-6 text-left">Name</th>
                                <th class="py-3 px-6 text-left">Unit</th>
                                <th class="py-3 px-6 text-left">Price $</th>
                                <th class="py-3 px-6 text-left">Weight (kg)</th>
                                <th class="py-3 px-6 text-left">Actions</th>
                            </tr>
                        </thead>
                        <tbody id="accessoryTableBody" class="text-gray-600 text-sm font-light">
                            <% accessories.forEach(function(accessory) { %>
                                <tr class="border-b border-gray-200 hover:bg-gray-100">
                                    <td class="py-3 px-6 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= accessory.name %></div>
                                    </td>
                                    <td class="py-3 px-6 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= accessory.unit %></div>
                                    </td>
                                    <td class="py-3 px-6 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= accessory.price.toLocaleString('en-US', { style: 'currency', currency: 'USD' }) %></div>
                                    </td>
                                    <td class="py-3 px-6 whitespace-nowrap">
                                        <div class="text-sm text-gray-900"><%= accessory.weight ? accessory.weight.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) : 'N/A' %></div>
                                    </td>
                                    <td class="py-3 px-6 whitespace-nowrap text-sm font-medium">
                                        <a href="/admin/accessories/edit/<%= accessory._id %>" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                        <form action="/admin/accessories/delete/<%= accessory._id %>" method="post" class="inline">
                                            <button type="submit" class="text-red-600 hover:text-red-900 ml-4" onclick="return confirm('Are you sure you want to delete this accessory?');">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <p class="text-gray-600">No accessories found.</p>
            <% } %>
        </div>
        <div class="mt-4 text-center">
            <a href="/admin" class="bg-gray-800 hover:bg-gray-900 text-white font-bold py-2 px-4 rounded">Back to Admin Console</a>
        </div>
    </main>
    <%- include('../partials/_footer.ejs') %>
</body>
</html>
