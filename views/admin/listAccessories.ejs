                                <tr class="accessory-row animate-row" style="animation-delay: <%= index * 30 %>ms"
                                    data-id="<%= accessory._id %>"
                                    data-search="<%= accessory.name.toLowerCase() %> <%= (accessory.referenceNumber || '').toLowerCase() %> <%= (accessory.providerName || '').toLowerCase() %>">
                                    <td>
                                        <input type="checkbox" class="checkbox-custom row-checkbox" data-id="<%= accessory._id %>">
                                    </td>
                                    <td>
                                        <% if (accessory.image) { %>
                                            <img src="<%= accessory.image %>" alt="<%= accessory.name %>" class="image-thumb">
                                        <% } else { %>
                                            <div class="image-placeholder">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                                </svg>
                                            </div>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge badge-indigo"><%= accessory.referenceNumber || 'N/A' %></span>
                                    </td>
                                    <td>
                                        <span class="font-medium text-gray-900"><%= accessory.name %></span>
                                    </td>
                                    <td>
                                        <% if (accessory.providerName) { %>
                                            <span class="badge badge-purple"><%= accessory.providerName %></span>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">—</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <span class="badge badge-sky"><%= accessory.unit %></span>
                                    </td>
                                    <td>
                                        <span class="price-display font-semibold text-green-600" 
                                              data-price="<%= accessory.price %>" 
                                              data-currency="<%= accessory.currency || 'COP' %>">
                                        </span>
                                    </td>
                                    <td>
                                        <% if (accessory.weight) { %>
                                            <span class="badge badge-amber"><%= accessory.weight.toFixed(2) %> kg</span>
                                        <% } else { %>
                                            <span class="text-gray-400 text-sm">—</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        <div class="flex items-center justify-center gap-1">
                                            <a href="/admin/accessories/edit/<%= accessory._id %>" class="action-btn edit" title="Edit">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 0L11.828 15H9v-2.828l8.586-8.586z" />
                                                </svg>
                                            </a>
                                            <button onclick="deleteAccessory('<%= accessory._id %>', '<%= accessory.name %>')" class="action-btn delete" title="Delete">
                                                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                                                </svg>
                                            </button>
                                            <form id="delete-form-<%= accessory._id %>" action="/admin/accessories/delete/<%= accessory._id %>" method="post" class="hidden"></form>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
