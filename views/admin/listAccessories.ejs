                                    data-search="<%= accessory.name.toLowerCase() %> <%= (accessory.referenceNumber || '').toLowerCase() %> <%= (accessory.providerName || '').toLowerCase() %>">
                                    <td>
                                        <input type="checkbox" class="checkbox-custom row-checkbox" data-id="<%= accessory._id %>">
                                    </td>
                                    <td>
