                    <!-- Currency Toggle -->
                    <div class="flex items-center gap-2">
                        <span class="text-xs text-gray-500">Currency:</span>
                        <div class="currency-toggle">
                            <button id="copBtn" class="currency-btn active">COP</button>
                            <button id="usdBtn" class="currency-btn">USD</button>
                        </div>
