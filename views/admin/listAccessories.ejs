    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        // Exchange rate
        const exchangeRate = <%= exchangeRate || 4000 %>;
        let currentCurrency = 'COP';
        
        // Currency functions
        function formatPrice(price, currency) {
            const locale = currency === 'USD' ? 'en-US' : 'es-CO';
            return new Intl.NumberFormat(locale, {
                style: 'currency',
                currency: currency,
                maximumFractionDigits: currency === 'USD' ? 2 : 0
            }).format(price);
        }
        
        function convertPrice(price, fromCurrency, toCurrency) {
            if (fromCurrency === toCurrency) return price;
            if (fromCurrency === 'USD' && toCurrency === 'COP') return price * exchangeRate;
            if (fromCurrency === 'COP' && toCurrency === 'USD') return price / exchangeRate;
            return price;
        }
        
        function updatePrices() {
            document.querySelectorAll('.price-display').forEach(el => {
                const price = parseFloat(el.dataset.price);
                const originalCurrency = el.dataset.currency || 'COP';
                const converted = convertPrice(price, originalCurrency, currentCurrency);
                el.textContent = formatPrice(converted, currentCurrency);
            });
        }
        
        // Use global currency preference
        function updateCurrencyFromGlobal() {
            if (window.globalPreferences) {
                currentCurrency = window.globalPreferences.currency || 'COP';
                updatePrices();
            }
        }
        
        // Weight unit conversion
        // For accessories: kg to lbs (1 kg = 2.20462 lbs)
        const KG_TO_LBS = 2.20462;
        let currentWeightUnit = 'kg'; // 'kg' or 'lbs'
        
        // Update all weight displays
        function updateWeightDisplays() {
            const weightElements = document.querySelectorAll('.weight-display');
            
            weightElements.forEach(element => {
                const kgValue = parseFloat(element.dataset.weight);
                if (!isNaN(kgValue)) {
                    if (currentWeightUnit === 'kg') {
                        element.textContent = kgValue.toFixed(2) + ' kg';
                    } else {
                        const lbsValue = kgValue * KG_TO_LBS;
                        element.textContent = lbsValue.toFixed(2) + ' lbs';
                    }
                }
            });
        }
        
        // Handle weight unit toggle
        function switchWeightUnit(unit) {
            currentWeightUnit = unit;
            
            // Update button states
            document.getElementById('kgBtn').classList.toggle('active', unit === 'kg');
            document.getElementById('lbsBtn').classList.toggle('active', unit === 'lbs');
            
            // Update all weights
            updateWeightDisplays();
        }
        
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function() {
            const term = this.value.toLowerCase();
            const rows = document.querySelectorAll('.accessory-row');
            let visible = 0;
            
            rows.forEach(row => {
                const match = row.dataset.search.includes(term);
                row.style.display = match ? '' : 'none';
                if (match) visible++;
            });
            
            document.getElementById('displayCount').textContent = visible;
            document.getElementById('searchCount').classList.toggle('hidden', term === '');
            document.getElementById('visibleCount').textContent = visible;
        });
        
        // Select all checkbox
        document.getElementById('selectAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.row-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
            updateBulkActions();
        });
        
        // Row checkboxes
        document.querySelectorAll('.row-checkbox').forEach(cb => {
            cb.addEventListener('change', updateBulkActions);
        });
        
        function updateBulkActions() {
            const checked = document.querySelectorAll('.row-checkbox:checked');
            const bulkBtn = document.getElementById('bulkDeleteBtn');
            const countSpan = document.getElementById('selectedCount');
            
            if (checked.length > 0) {
                bulkBtn.classList.remove('hidden');
                countSpan.textContent = checked.length;
            } else {
                bulkBtn.classList.add('hidden');
            }
        }
        
        // Bulk delete
        document.getElementById('bulkDeleteBtn')?.addEventListener('click', async function() {
            const checked = document.querySelectorAll('.row-checkbox:checked');
            const ids = Array.from(checked).map(cb => cb.dataset.id);
            
            if (!confirm(`Are you sure you want to delete ${ids.length} hardware items?`)) return;
            
            for (const id of ids) {
                await fetch(`/admin/hardware/delete/${id}`, { method: 'POST' });
            }
            location.reload();
        });
        
        // Single delete
        function deleteAccessory(id, name) {
            if (confirm(`Are you sure you want to delete "${name}"?`)) {
                document.getElementById(`delete-form-${id}`).submit();
            }
        }
        
        // Import functionality
        document.getElementById('import-file')?.addEventListener('change', async function(e) {
            if (this.files.length > 0) {
                const formData = new FormData();
                formData.append('file', this.files[0]);
                
                const submitBtn = document.createElement('div');
                submitBtn.className = 'fixed top-4 right-4 bg-purple-600 text-white px-4 py-2 rounded-lg flex items-center z-50';
                submitBtn.innerHTML = '<svg class="animate-spin h-5 w-5 mr-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> Importing accessories...';
                document.body.appendChild(submitBtn);
                
                try {
                    const response = await fetch('/admin/hardware/import-accessories', {
                        method: 'POST',
                        body: formData
                    });
                    const result = await response.json();
                    
                    showNotification(result.message, response.ok ? 'success' : 'error');
                    
                    if (response.ok) {
                        setTimeout(() => location.reload(), 1500);
                    } else {
                        document.body.removeChild(submitBtn);
                    }
                } catch (error) {
                    showNotification('Failed to import: ' + error.message, 'error');
                    document.body.removeChild(submitBtn);
                }
            }
        });
        
        // Notification system
        function showNotification(message, type) {
            const notification = document.createElement('div');
            notification.className = `fixed top-4 right-4 px-6 py-3 rounded-lg shadow-lg text-white ${type === 'success' ? 'bg-green-600' : 'bg-red-600'} transition-all duration-300 flex items-center z-50`;
            
            const icon = type === 'success' 
                ? '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>'
                : '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" viewBox="0 0 20 20" fill="currentColor"><path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" /></svg>';
            
            notification.innerHTML = icon + message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.opacity = '0';
                notification.style.transform = 'translateY(-10px)';
                setTimeout(() => {
                    if (notification.parentNode) document.body.removeChild(notification);
                }, 300);
            }, 4000);
        }
        
        // Export to Excel
        function exportToExcel() {
            const data = [['Reference', 'Name', 'Provider', 'Unit', 'Price', 'Currency', 'Weight']];
            
            document.querySelectorAll('.accessory-row').forEach(row => {
                if (row.style.display !== 'none') {
                    const cells = row.querySelectorAll('td');
                    const priceEl = cells[6].querySelector('.price-display');
                    data.push([
                        cells[2].textContent.trim(),
                        cells[3].textContent.trim(),
                        cells[4].textContent.trim() || '',
                        cells[5].textContent.trim(),
                        priceEl ? priceEl.dataset.price : '',
                        priceEl ? priceEl.dataset.currency : '',
                        cells[7].textContent.trim().replace(' kg', '') || ''
                    ]);
                }
            });
            
            // Create workbook and worksheet
            const wb = XLSX.utils.book_new();
            const ws = XLSX.utils.aoa_to_sheet(data);
            
            // Set column widths
            ws['!cols'] = [
                { wch: 15 }, // Reference
                { wch: 25 }, // Name
                { wch: 20 }, // Provider
                { wch: 10 }, // Unit
                { wch: 15 }, // Price
                { wch: 10 }, // Currency
                { wch: 12 }  // Weight
            ];
            
            // Add worksheet to workbook
            XLSX.utils.book_append_sheet(wb, ws, 'Hardware');
            
            // Generate Excel file and download
            XLSX.writeFile(wb, 'hardware.xlsx');
        }
        
        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize from global preferences and listen to changes
            if (window.globalPreferences) {
                updateCurrencyFromGlobal();
            } else {
                // Wait for global preferences to be available
                const checkGlobalPrefs = setInterval(() => {
                    if (window.globalPreferences) {
                        updateCurrencyFromGlobal();
                        clearInterval(checkGlobalPrefs);
                    }
                }, 100);
                setTimeout(() => clearInterval(checkGlobalPrefs), 2000);
            }
            window.addEventListener('currencyChanged', (event) => {
                currentCurrency = event.detail.currency;
                updatePrices();
            });
            
            // Weight unit toggle event listeners
            document.getElementById('kgBtn').addEventListener('click', () => switchWeightUnit('kg'));
            document.getElementById('lbsBtn').addEventListener('click', () => switchWeightUnit('lbs'));
            updatePrices();
        });
    </script>
