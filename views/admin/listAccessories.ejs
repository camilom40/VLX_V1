                                </th>
                                <th>Image</th>
                                <th>Reference</th>
                                <th>Name</th>
                                <th>Provider</th>
                                <th>Unit</th>
                                <th>Price</th>
                                <th>Weight</th>
                                <th class="text-center">Actions</th>
                            </tr>
