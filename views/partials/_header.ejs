<style>
  .header-toggle-btn {
    color: #bfdbfe;
    background-color: transparent;
    transition: all 0.2s;
  }
  .header-toggle-btn:hover {
    color: #ffffff;
    background-color: rgba(255, 255, 255, 0.1);
  }
  .header-toggle-btn.active {
    color: #ffffff;
    background-color: #3b82f6;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.1);
  }
</style>

<script>
  // Global preferences - stored in localStorage
  window.globalPreferences = {
    currency: localStorage.getItem('globalCurrency') || 'COP',
    unit: localStorage.getItem('globalUnit') || 'inches',
    exchangeRate: null // Will be set by pages that need it
  };

  // Set global currency preference
  window.setGlobalCurrency = function(currency) {
    if (currency !== 'COP' && currency !== 'USD') return;
    
    window.globalPreferences.currency = currency;
    localStorage.setItem('globalCurrency', currency);
    
    // Update header buttons
    const copBtn = document.getElementById('headerCurrencyCOP');
    const usdBtn = document.getElementById('headerCurrencyUSD');
    if (copBtn && usdBtn) {
      copBtn.classList.toggle('active', currency === 'COP');
      usdBtn.classList.toggle('active', currency === 'USD');
    }
    
    // Dispatch custom event for pages to listen to
    window.dispatchEvent(new CustomEvent('currencyChanged', { detail: { currency } }));
  };

  // Set global unit preference
  window.setGlobalUnit = function(unit) {
    if (unit !== 'inches' && unit !== 'mm') return;
    
    window.globalPreferences.unit = unit;
    localStorage.setItem('globalUnit', unit);
    
    // Update header buttons
    const inchesBtn = document.getElementById('headerUnitInches');
    const mmBtn = document.getElementById('headerUnitMm');
    if (inchesBtn && mmBtn) {
      inchesBtn.classList.toggle('active', unit === 'inches');
      mmBtn.classList.toggle('active', unit === 'mm');
    }
    
    // Dispatch custom event for pages to listen to
    window.dispatchEvent(new CustomEvent('unitChanged', { detail: { unit } }));
  };

  // Initialize header toggles on page load
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu toggle
    const menuButton = document.getElementById('mobile-menu-button');
    if (menuButton) {
      menuButton.addEventListener('click', function() {
        const menu = document.getElementById('mobile-menu');
        if (menu) {
          menu.classList.toggle('hidden');
        }
      });
    }

    // Update date and time
    function updateDateTime() {
      const now = new Date();
      
      // Format date
      const dateOptions = { 
        weekday: 'long', 
        year: 'numeric', 
        month: 'long', 
        day: 'numeric'
      };
      const dateEl = document.getElementById('currentDate');
      if (dateEl) {
        dateEl.textContent = now.toLocaleDateString('en-US', dateOptions);
      }
      
      // Format time
      const timeOptions = {
        hour: '2-digit',
        minute: '2-digit',
        second: '2-digit',
        hour12: true
      };
      const timeEl = document.getElementById('currentTime');
      if (timeEl) {
        timeEl.textContent = now.toLocaleTimeString('en-US', timeOptions);
      }
    }
    
    // Update immediately and then every second
    updateDateTime();
    setInterval(updateDateTime, 1000);

    // Initialize header toggle states from localStorage
    const currency = window.globalPreferences.currency;
    const unit = window.globalPreferences.unit;
    
    const copBtn = document.getElementById('headerCurrencyCOP');
    const usdBtn = document.getElementById('headerCurrencyUSD');
    if (copBtn && usdBtn) {
      copBtn.classList.toggle('active', currency === 'COP');
      usdBtn.classList.toggle('active', currency === 'USD');
    }
    
    const inchesBtn = document.getElementById('headerUnitInches');
    const mmBtn = document.getElementById('headerUnitMm');
    if (inchesBtn && mmBtn) {
      inchesBtn.classList.toggle('active', unit === 'inches');
      mmBtn.classList.toggle('active', unit === 'mm');
    }
  });
</script>
